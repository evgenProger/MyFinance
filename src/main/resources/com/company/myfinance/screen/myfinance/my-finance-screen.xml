<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://myFinanceScreen.caption">
    <data>
        <collection id="transactionsDc" class="com.company.myfinance.entity.Transaction">
            <fetchPlan extends="_base">
                <property name="types" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="transactionsDl">
                <query>
                    <![CDATA[select e from Transaction_ e]]>
                </query>
            </loader>
        </collection>
        <collection id="typesDc" class="com.company.myfinance.entity.Type">
            <fetchPlan extends="_base"/>
            <loader id="typesDl">
                <query>
                    <![CDATA[select e from Type_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <form id="form">

            <column width="350px">
                Выберите тип
                <entityComboBox id="typeField" property="type" optionsContainer="typesDc"/>
                <button id="saveButton" caption="Save" primary="true"/>/>
            </column>
        </form>
        <filter id="filter" columnsCount="3" dataLoader="transactionsDl">
            <properties include=".*"/>
        </filter>

        <hbox spacing="true"/>

        <table id="transactionsTable" height="300px" width="100%" dataContainer="transactionsDc"
               aggregatable="true" aggregationStyle="BOTTOM">

            <columns>
                <column id="create_date"/>
                <column id="transfer_amount">
                    <aggregation type="SUM" />
            </column>
                <column id="types"/>
            </columns>
        </table>
        <hbox spacing="true"/>
    </layout>
</window>