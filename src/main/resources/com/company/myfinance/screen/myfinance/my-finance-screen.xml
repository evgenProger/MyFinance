<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="Report">
    <data>
        <collection id="transactionsDc" class="com.company.myfinance.entity.Transaction">
            <fetchPlan extends="_base">
                <property name="types" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="transactionsDl">
                <query>
                    <![CDATA[select e from Transaction_ e]]>
                </query>
            </loader>
        </collection>
        <collection id="typesDc" class="com.company.myfinance.entity.Type">
            <fetchPlan extends="_base"/>
            <loader id="typesDl">
                <query>
                    <![CDATA[select e from Type_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <buttonsPanel alwaysVisible="true" spacing="true">
            <hbox spacing="true">
                <dateField id="fromDate" caption="Начало периода" property="create_date"/>
                <dateField id="toDate" caption="Конец периода" property="create_date"/>
                <entityComboBox id="typeField" caption="Выберите тип" property="type" optionsContainer="typesDc"/>
                <button id="saveButton" caption="Create" primary="true"
                        captionAsHtml="true" align="BOTTOM_LEFT"/>
            </hbox>
        </buttonsPanel>
        <table id="transactionsTable" width="100%" dataContainer="transactionsDc"
               aggregatable="true" aggregationStyle="BOTTOM" editable="true" box.expandRatio="1.0">
            <columns>
                <column id="create_date"/>
                <column id="transfer_amount">
                    <aggregation type="SUM" />
                </column>
                <column id="types"/>
            </columns>
        </table>
    </layout>
</window>