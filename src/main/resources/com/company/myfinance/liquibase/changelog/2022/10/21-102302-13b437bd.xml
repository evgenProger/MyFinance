<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="myFinance">
        <createTable tableName="BANC_ACCOUNT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BANC_ACCOUNT"/>
            </column>
            <column name="AMOUNT" type="VARCHAR(255)"/>
            <column name="USER_ID" type="UUID"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="myFinance">
        <createTable tableName="TRANSACTION_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TRANSACTION_"/>
            </column>
            <column name="FROM_ACC_ID" type="UUID"/>
            <column name="TO_ACC_ID_ID" type="UUID"/>
            <column name="CREATE_DATE" type="DATETIME"/>
            <column name="TRANSFER_AMOUNT" type="DECIMAL(19, 2)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="myFinance">
        <createTable tableName="TYPE_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TYPE_"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="USER_ID" type="UUID"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="myFinance">
        <createTable tableName="TYPE_TRANSACTION_LINK">
            <column name="TRANSACTION_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TYPE_TRANSACTION_LINK"/>
            </column>
            <column name="TYPE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TYPE_TRANSACTION_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="myFinance">
        <createIndex indexName="IDX_BANC_ACCOUNT_USER" tableName="BANC_ACCOUNT">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="BANC_ACCOUNT"
                                 constraintName="FK_BANC_ACCOUNT_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="6" author="myFinance">
        <createIndex indexName="IDX_TRANSACTION__FROM_ACC" tableName="TRANSACTION_">
            <column name="FROM_ACC_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FROM_ACC_ID" baseTableName="TRANSACTION_"
                                 constraintName="FK_TRANSACTION__ON_FROM_ACC" referencedColumnNames="ID"
                                 referencedTableName="BANC_ACCOUNT"/>
    </changeSet>
    <changeSet id="7" author="myFinance">
        <createIndex indexName="IDX_TRANSACTION__TO_ACC_ID" tableName="TRANSACTION_">
            <column name="TO_ACC_ID_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TO_ACC_ID_ID" baseTableName="TRANSACTION_"
                                 constraintName="FK_TRANSACTION__ON_TO_ACC_ID" referencedColumnNames="ID"
                                 referencedTableName="BANC_ACCOUNT"/>
    </changeSet>
    <changeSet id="8" author="myFinance">
        <createIndex indexName="IDX_TYPE__USER" tableName="TYPE_">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="TYPE_" constraintName="FK_TYPE__ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="9" author="myFinance">
        <addForeignKeyConstraint baseColumnNames="TRANSACTION_ID" baseTableName="TYPE_TRANSACTION_LINK"
                                 constraintName="FK_TYPTRA_ON_TRANSACTION" referencedColumnNames="ID"
                                 referencedTableName="TRANSACTION_"/>
    </changeSet>
    <changeSet id="10" author="myFinance">
        <addForeignKeyConstraint baseColumnNames="TYPE_ID" baseTableName="TYPE_TRANSACTION_LINK"
                                 constraintName="FK_TYPTRA_ON_TYPE" referencedColumnNames="ID"
                                 referencedTableName="TYPE_"/>
    </changeSet>
    <changeSet id="11" author="myFinance">
        <dropColumn columnName="DTYPE" tableName="USER_"/>
    </changeSet>
</databaseChangeLog>